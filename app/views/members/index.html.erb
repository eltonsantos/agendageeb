<h1>Membros</h1>

<%= search_form_for @q, builder: SimpleForm::FormBuilder do |f| %>
  <%= f.input :name_cont, label: false, placeholder: 'Nome', class: 'form-control' %>
  <%= f.input :email_cont, label: false, placeholder: 'Email', class: 'form-control' %>
  <%= f.input :city_cont, label: false, placeholder: 'Cidade', class: 'form-control' %>
  <%= f.input :state_cont, label: false, placeholder: 'Estado', class: 'form-control' %>
  <%= f.button :button, name: '', class: 'btn-warning btn-align' do %>
    Buscar
  <% end %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Data de nascimento</th>
      <th>Telefone</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Alta CÃºpula?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= member.birthdate.strftime("%d/%m/%Y") %></td>
        <td><%= member.phone %></td>
        <td><%= member.city %></td>
        <td><%= member.state %></td>
        <td>
          <% if member.altacupula? %>
            <i class="fas fa-check-circle"></i>
          <% else %>
            <i class="fas fa-times-circle"></i>
          <% end %>
        </td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

