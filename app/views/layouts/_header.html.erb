<header class="navigation fixed-top">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <%= link_to root_path, class: "navbar-brand font-tertiary h3" do %>
      <%= image_tag ("agendageeb.png") %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
      aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse text-center" id="navigation">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Telegram", geeb_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Our Team", team_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "F.A.Q", faqs_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Terms of Use", terms_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Suggestions", suggestions_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Testimonials", testimonials_path, class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Membros", members_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            Bem vindo, <%= current_user.email %>
          </li>
          <li class="nav-item">
            <%=link_to "Sair", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>