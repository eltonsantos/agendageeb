<!DOCTYPE html>
<html>
  <head>
    <title>Agendageeb</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://jsuites.net/v4/jsuites.css" %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <%= javascript_include_tag "https://jsuites.net/v4/jsuites.js" %>
    
  </head>

  <body>
  
    <ul class="navbar-nav ml-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "About", about_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Telegram", geeb_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Our Team", team_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "F.A.Q", faqs_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Terms of Use", terms_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Suggestions", suggestions_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Testimonials", testimonials_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Membros", members_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          Bem vindo, <%= current_user.email %>
        </li>
        <li class="nav-item">
          <%=link_to "Sair", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>

    <%= render 'layouts/flash_messages' %>
    
    <%= yield %>

  </body>
</html>
